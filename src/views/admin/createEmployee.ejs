<%- include('./../partials/header.ejs') %> <%-
include('./../partials/navbar/navbarAdmin.ejs') %>
<br />
<div class="container">
  <div class="card">
    <div class="card-body">
      <h1 class="text-center">Formulario de creación de empleados</h1>
      <div class="container">
        <form action="/admin/registerEmployee" method="post">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="text" class="form-label">Nombre:</label>
              <input
                type="text"
                class="form-control"
                id="nombre"
                name="nombre"
                required
              />
            </div>
            <div class="form-group">
              <label for="email" class="form-label">Correo Electrónico:</label>
              <input
                type="email"
                class="form-control"
                id="correo"
                name="correo"
                required
              />
            </div>
            <div class="form-group">
              <label for="password" class="form-label">Contraseña:</label>
              <input
                type="password"
                class="form-control"
                id="contraseña"
                name="contraseña"
                required
              />
            </div>
          </div>
          <br>
          <div class="col-lg-12">
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-block">Registrar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('./../partials/footer.ejs') %>
